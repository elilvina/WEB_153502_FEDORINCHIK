@page
@using WEB_153502_FEDORINCHIK.Services.GameGenreService;
@inject IGameGenreService gameGenreService
@model WEB_153502_FEDORINCHIK.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";

    var response = await gameGenreService.GetGameGenreListAsync();
    var genres = new SelectList(response.Data ?? new(), "Id", "Name");

}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">   
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Game.Id" />
            <input type="hidden" asp-for="Game.Path" />
            <div class="form-group">
                <label asp-for="Game.Name" class="control-label"></label>
                <input asp-for="Game.Name" class="form-control" />
                <span asp-validation-for="Game.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Genre" class="control-label"></label>
                <select asp-for="Game.GenreId" class="form-control" asp-items=@genres></select>
                <span asp-validation-for="Game.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Description" class="control-label"></label>
                <input asp-for="Game.Description" class="form-control" />
                <span asp-validation-for="Game.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Price" class="control-label"></label>
                <input asp-for="Game.Price" class="form-control" />
                <span asp-validation-for="Game.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" name="Image" type="file" class="form-control">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning"  asp-page="./Index">Back to List</a>
</div>

