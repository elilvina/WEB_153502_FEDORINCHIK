@{
    ViewBag.Title = "Index";
}

<h1>@ViewData["CurrentLab"]</h1>

<div>
    <h2>Список</h2>
    <ol type="A">
        @for(int i =0; i<5; i++)
        {
            <li>Элемент @i списка</li>
        }
    </ol>
</div>

<hr />

<div>
    <h2>Форма</h2>
    <form method="post">

        <select class="form-control form-select" id="dropDownList" name="SelectedItemId" asp-items="Model"></select>

        <ul class="list-group" style="width: 400px;">
            <li class="list-group-item">
                <input name="firstCheckbox" class="form-check-input me-1" type="checkbox" value="option_1" id="inputFirstCheckbox">
                <label class="form-check-label" for="firstCheckbox">Чек-бокс 1</label>
            </li>
            <li class="list-group-item">
                <input name="secondCheckbox" class="form-check-input me-1" type="checkbox" value="option_2" id="inputSecondCheckbox">
                <label class="form-check-label" for="secondCheckbox">Чек-бокс 2</label>
            </li>
            <li class="list-group-item">
                <input name="thirdCheckbox" class="form-check-input me-1" type="checkbox" value="option_3" id="inputThirdCheckbox">
                <label class="form-check-label" for="thirdCheckbox">Чек-бокс 3</label>
            </li>
        </ul>

        <br />

        <table>
            <tr>
                <td>
                    <input class="form-check-input me-1" type="radio" name="listGroupRadio" value="option_1" id="inputFirstRadio" checked>
                    <label class="form-check-label" for="firstRadio">Радио-1</label>
                </td>
                <td>
                    <input class="form-check-input me-1" type="radio" name="listGroupRadio" value="option_2" id="inputSecondRadio">
                    <label class="form-check-label" for="secondRadio">Радио-2</label>
                </td>
                <td>
                    <input class="form-check-input me-1" type="radio" name="listGroupRadio" value="option_3" id="inputThirdRadio">
                    <label class="form-check-label" for="thirdRadio">Радио-3</label>
                </td>
            </tr>
        </table>

        <br />

        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input name="email" type="email" class="form-control" id="inputEmail">
            </div>
        </div>

        <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Пороль</label>
            <div class="col-sm-10">
                <input name="password" type="password" class="form-control" id="inputPassword">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Отправить</button>

        <br />
        <br />
    </form>

</div>


